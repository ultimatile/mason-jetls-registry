{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "separateMinorPatch": false,
  "prConcurrentLimit": 3,
  "prCreation": "immediate",
  "automerge": false,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^packages/.*/package\\.yaml$/"
      ],
      "matchStrings": [
        "id:\\s*pkg:github/(?<depName>[^@]+)@(?<currentValue>\\S+)",
        "url=\"https://github\\.com/(?<depName>[^\"]+)\",\\s*rev=\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchPackageNames": [
        "aviatesk/JETLS.jl"
      ],
      "commitMessageTopic": "JETLS.jl",
      "commitMessageExtra": "to {{newValue}}",
      "schedule": [
        "every weekend"
      ]
    }
  ]
}
